{% extends 'base.html.twig' %}

{% block javascripts %}


<script type="text/javascript">
    window.cheminURLAjaxShowDepHistoTraiment = "{{ path('show_histo_dep_traitement') }}";
</script>

    {% if app.session.get('choice') == 'OGRA'  %}
        <script src="{{ asset('js/admin_OGRA.js') }}" type="text/javascript"></script>
    {% endif %}
{% endblock %}

{% block title %}OGRX{% endblock %}




{% block body %}
    <div class="container-fluid">
        <a href="{{ path('app_logout') }}" class="btn btn-primary">Déconnexion</a>
        <a href="{{ path('choices.admin.redirect.target') }}" class="btn btn-primary">Administration</a>
    </div>
{% if type == 'dep' %}
    <div class="container mt-4"><h2>Choisir un département</h2></div>
{% endif %}
{% if type == 'reseau' %}
    <div class="container mt-4"><h2>Choisir un réseau</h2></div>
{% endif %}

    {% if type == 'dep' %}
    <div class="div container">
        <select id="selectDep" class="form-control">
            <option>Départements</option>
            {% for dep in deps %}
                <option value="{{ dep.cp }}">{{ dep.cp }} {{ dep.dep }}</option>
            {% endfor %}
        </select>
    </div>
        <div class="container" style="text-align: right; padding-top: 20px;">
            <button type="button" class="btn btn-primary" id="validShowDep">Valider</button>
        </div>
    {% endif %}
    {% if type == 'reseau' %}
        <div class="div container">
            <select id="selectRes" class="form-control">
                <option>Réseaux</option>
                {% for dep in deps %}
                    <option value="{{ dep.reseau }}">{{ dep.reseau }} </option>
                {% endfor %}
            </select>
        </div>
        <div class="container" style="text-align: right; padding-top: 20px;">
            <button type="button" class="btn btn-primary" id="validShowRes">Valider</button>
        </div>
    {% endif %}

{% endblock %}