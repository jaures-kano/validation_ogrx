{% extends 'base.html.twig' %}

{% block javascripts %}

    {% if app.session.get('choice') == 'OGRA'  %}
    <script src="{{ asset('js/admin_OGRA.js') }}" type="text/javascript"></script>
    {% endif %}$
    {% if app.session.get('choice') == 'OGRB'  %}
        <script src="{{ asset('js/admin_OGRB.js') }}" type="text/javascript"></script>
    {% endif %}
    {% if app.session.get('choice') == 'GAB'  %}
        <script src="{{ asset('js/admin_OGRB.js') }}" type="text/javascript"></script>
    {% endif %}

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        table td {
            font-size: .7rem;
            font-weight: 300;
        }
        table th {
            font-size: .7rem;

        }

    </style>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">

{% endblock %}

{% block title %}OGRX{% endblock %}

{% block body %}
    <div class="container-fluid">
        <a href="{{ path('admin.histo.dep',{type : typechoice}  ) }}" class="btn btn-primary">Retour</a>


    </div>

    <div class="container mt-4"><h2>Historique</h2></div>

    <div class="div container-fluid">

        <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="listeTrait">
            <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Agent</th>
                <th>Date</th>
                <th>Web</th>
                <th>Type</th>
                <th>Codens</th>
                <th>Code eve</th>
                <th>Saisi</th>
                <th>Réseau</th>
                <th>Nom</th>
                <th>N°</th>
                <th>Type voie</th>
                <th>Nom voie</th>
                <th>CP</th>
                <th>Ville</th>
                <th>Commentaires</th>
            </tr>
            </thead>
            <tbody>
            {% for list in listehisto %}
                <tr>
                    <th><img src="img/search.png" alt="Voir" title="Voir" onclick="" ></th>
                    <td>{{ list.vid  }}</td>
                    <td>{{ list.firstname  }} {{ list.name  }}</td>
                    <td>{{ list.date_valide  }}&nbsp; &nbsp;</td>
                    <td>{{ list.pstweb  }}</td>
                    <td>{{ list.type_ligne  }}</td>
                    <td>{{ list.codens  }}</td>
                    <td>{{ list.code_eve  }}</td>
                    <td>{{ list.saisi  }}</td>
                    <td>{{ list.res1  }}</td>
                    <td>{{ list.nomnorm1  }}</td>
                    <td>{{ list.numvoie  }}</td>
                    <td>{{ list.typevoie  }}</td>
                    <td>{{ list.nomvoie  }}</td>
                    <td>{{ list.codpost  }}</td>
                    <td>{{ list.villenorm  }}</td>
                    <td>{{ list.comvali  }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock %}